<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>distro</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <moduleSets>
  	<moduleSet>
  		<useAllReactorProjects>true</useAllReactorProjects>
  		<includes>
  			<include>com.splout.db:splout-server</include>
  		</includes>
  		<binaries>
			  <dependencySets>
			    <dependencySet>
			      <unpack>false</unpack>
			      <scope>runtime</scope>
			      <outputDirectory>lib</outputDirectory>
			    </dependencySet>
			  </dependencySets>  			 
  		</binaries>
  		<sources>
			  <fileSets>
			  	<fileSet>  		
			  		<directory></directory>
			  		<includes>
			  			<include>LICENSE.txt</include>
			  			<include>SPLOUT-SERVER-LICENSING</include>  			
						</includes>
			  		<outputDirectory></outputDirectory>  	
			  	</fileSet>
			  	<fileSet>  		
			  		<directory>target/generated-sources/license</directory>
			  		<includes>
			  			<include>THIRD-PARTY.txt</include>  			
						</includes>
			  		<outputDirectory></outputDirectory>  	
			  	</fileSet>  	  	  	  	  	
			  	<fileSet>
			  		<directory>target/generated-resources/licenses</directory>
			  		<outputDirectory>legal</outputDirectory>  	
			  	</fileSet>  	
			  	<fileSet>
			  		<directory>target/maven-shared-archive-resources</directory>
			  		<outputDirectory>native</outputDirectory>  	
			  	</fileSet>
			  	<fileSet>
			  		<directory>src/main/scripts</directory>
			  		<outputDirectory>bin</outputDirectory>
			  	</fileSet>
			  	<fileSet>
			  		<directory>examples</directory>
			  		<outputDirectory>examples</outputDirectory>
			  	</fileSet>
			  </fileSets>
  		</sources>
  	</moduleSet>
  	<moduleSet>
  		<useAllReactorProjects>true</useAllReactorProjects>
  		<includes>
  			<include>com.splout.db:splout-hadoop</include>
  		</includes>
  		<sources>
  			<fileSets>
  				<fileSet>
  					<directory>target</directory>
  					<includes>
  						<include>splout*hadoop.jar</include>
  					</includes>
  				</fileSet>
  			</fileSets>
  		</sources>
  	</moduleSet>  	
  </moduleSets>
</assembly>
